<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemoteWebViewLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@android:color/transparent</item>

        <item name="colorAccent">#000000</item>
        <item name="android:itemBackground">@color/app_color_primary</item>
        <item name="android:windowBackground">@color/app_color_primary</item>

        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_color_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme.RemoteWebViewSettings" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_color_primary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="DarkThemeSettings" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorPrimary">@color/darkthemeColor</item>
        <!--   <item name="android:windowBackground">#2D2D2D</item>  -->

        <item name="android:windowBackground">@color/dark_layout_for_ui</item>
        <item name="colorPrimaryDark">@color/darkthemeColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/dark_layout_for_ui</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkthemeColor</item>
        <item name="colorPrimaryDark">@color/darkthemeColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/darkthemeColor
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
        <item name="android:itemBackground">@color/darkthemeColor</item>
        <item name="android:windowBackground">@color/darkthemeColor</item>
    </style>



    <!--   Theme by Powell -->

