<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:padding="15dp"
    android:visibility="gone"
    android:fitsSystemWindows="true"
    android:id="@+id/bottom_toolbar_container"
    android:background="?colorPrimary"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />


    <ImageView
         android:layout_marginLeft="10dp"
         android:id="@+id/bottomtoolbar_btn_7"
         android:layout_width="@dimen/bottom_toolbar_icon_width"
         android:clickable="true"
         android:focusable="true"
         android:foreground="?selectableItemBackground"
         android:gravity="center"
        android:src="@drawable/ic_baseline_notes_24"
         android:layout_height="@dimen/bottom_toolbar_icon_height"
        app:tint="@color/black" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/bottomtoolbar_btn_1"
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:gravity="center"
        android:layout_height="@dimen/bottom_toolbar_icon_height"

        android:contentDescription="TODO" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:id="@+id/bottomtoolbar_btn_2"
        android:layout_height="@dimen/bottom_toolbar_icon_height"

        android:contentDescription="TODO" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:id="@+id/bottomtoolbar_btn_3"
        android:layout_height="@dimen/bottom_toolbar_icon_height"

        android:contentDescription="TODO" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:id="@+id/bottomtoolbar_btn_4"
        android:layout_height="@dimen/bottom_toolbar_icon_height"

        android:contentDescription="TODO" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/bottomtoolbar_btn_5"
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:layout_height="@dimen/bottom_toolbar_icon_height"
        android:contentDescription="TODO" />
    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/bottomtoolbar_btn_6"
        android:layout_width="@dimen/bottom_toolbar_icon_width"
        android:layout_height="@dimen/bottom_toolbar_icon_height"
        android:contentDescription="TODO" />

    <Space
        android:layout_width="@dimen/bottom_toolbar_space_width"
        android:layout_height="wrap_content" />


</LinearLayout>