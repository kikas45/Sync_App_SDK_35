<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/urllayoutroot"
    android:visibility="gone"
    android:gravity="center"
    android:background="@color/app_color_primary"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/demo_btn_24"
        android:layout_height="120dp"
        android:contentDescription="TODO" />

    <TextView
        android:text="Advanced Plus Link Tester"
        android:gravity="center"
        android:textColor="#E4E1E1"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#E4E1E1"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:text="This function lets you test your website without going to google, you can disable this in source code"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/urledittextbox"
        android:background="@drawable/rounded_layout"
        android:hint="Enter link with http://"
        android:text="http://"

        android:padding="10dp"
        android:inputType="textUri"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:imeOptions="actionGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:autofillHints="" />
    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:padding="5dp"
        android:text="Launch url"

        android:textColor="@color/black"
        android:background="@drawable/rounded_layout"
        android:onClick="launchurlboxurl"
        android:drawableStart="@drawable/ic_launcher_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:drawableLeft="@drawable/demo_btn_24" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

    <Button
        android:text=" Hide"
        android:textColor="@color/black"
        android:onClick="hideurllayt"
        android:background="@drawable/rounded_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" />
    </LinearLayout>
</LinearLayout>