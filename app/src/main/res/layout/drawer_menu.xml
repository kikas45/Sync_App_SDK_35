<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_drawer_menu"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:animateLayoutChanges="true"
    android:background="?android:colorPrimary"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="0dp"
    android:visibility="gone"
    tools:visibility="visible">


    <LinearLayout
        android:id="@+id/drawerheaderBg"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="?android:colorPrimary"
        android:clickable="true"
        android:clipChildren="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/drawer_headerImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/todo"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/drawer_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="@string/app_name"
            android:textColor="?android:colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
    <!--    <View-->

    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0.1dp"-->
    <!--        android:background="@color/view_line" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawerheaderBg"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/drawer_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_1"
                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="Settings"

                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_2"

                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="Home"
                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_3"
                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="Item 3"
                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_4"
                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="@string/hello_navigation_drawer"
                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_5"

                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="@string/hello_navigation_drawer"
                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_item_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_6"
                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/demo_btn_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="@string/hello_navigation_drawer"

                android:textColor="?android:colorAccent"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/drawer_item_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawer_item_img_7"
                android:layout_width="@dimen/drawer_items_iconSize"
                android:layout_height="@dimen/drawer_items_iconSize"
                android:layout_gravity="center"
                style="@style/imageStyleColorTint"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_qr_code_scanner_24" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/drawer_item_text_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingStart="@dimen/drawer_imgright_padduing"
                android:paddingEnd="@dimen/drawer_imgright_padduing"
                android:text="Scan QR Code"
                android:textColor="#000000"
                android:textSize="@dimen/drawer_items_textSize" />

        </LinearLayout>




    </LinearLayout>
</RelativeLayout>